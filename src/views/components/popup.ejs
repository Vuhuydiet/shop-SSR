

<!-- error -->
<div id="popup" class="fixed inset-0 border-4 border-black flex items-center justify-center hidden z-50">
  <!-- Popup content with black border and animation -->
  <div id="popupContent" class="bg-white p-6 rounded-lg shadow-lg w-1/3 border-4 border-black" 
       style="animation: popupFadeIn 0.3s ease-out;">
    <h2 class="popup-header text-xl font-semibold mb-4"></h2>
    <p class="popup-content text-gray-700 mb-4"></p>
    
    <!-- Centered Close Button -->
    <div class="flex justify-center mt-4">
      <button id="closePopupButton" class="bg-red-500 text-white py-2 px-4 rounded hover:bg-red-700">
        Close
      </button>
    </div>
  </div>
</div>

<script>
  document.getElementById('closePopupButton').addEventListener('click', function() {
    document.getElementById('popup').classList.add('hidden');
  });
</script>