enum UserStatus {
  ACTIVE
  BLOCK
}

model User {
  userId Int        @id @default(autoincrement())
  status UserStatus

  email          String @unique
  hashedPassword String

  createdAt   DateTime  @default(now())
  lastLogin   DateTime?
  phoneNumber String?

  avatarUrl   String?
  publicImgId String?

  oauthProvider String?
  oauthId       String? @unique
  oauthToken    String

  shippingAddresses ShippingAddress[]
  cartItems CartItem[]
  orders Order[]
}


