model Category {
  categoryId   Int     @id @default(autoincrement())
  categoryName String  @unique
  description  String?

  products Product[]
}

model Brand {
  brandId     Int     @id @default(autoincrement())
  brandName   String  @unique
  description String?

  imageUrl    String?
  publicImgId String?

  products Product[]
}

enum ProductStatus {
  PUBLISHED
  UNPUBLISHED
  DELETED
}

model Product {
  productId          Int      @id @default(autoincrement())
  productName        String
  productDescription String?
  publishedAt        DateTime @default(now())
  updatedAt          DateTime @updatedAt
  status             ProductStatus @default(PUBLISHED)

  brandId    Int
  categoryId Int

  stock         Int @default(0)
  currentPrice  Int
  originalPrice Int

  soldQuantity Int   @default(0)
  stars        Float @default(5)
  numReviews   Int   @default(0)

  category      Category       @relation(fields: [categoryId], references: [categoryId], onDelete: Restrict)
  brand         Brand          @relation(fields: [brandId], references: [brandId], onDelete: Restrict)
  productImages ProductImage[]
  itemInCarts   CartItem[]
  orderDetails  OrderDetail[]
}

model ProductImage {
  imageId   Int @id @default(autoincrement())
  productId Int

  publicId String
  url      String

  product Product @relation(fields: [productId], references: [productId], onDelete: Restrict)
}
